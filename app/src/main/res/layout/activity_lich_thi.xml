<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLichThi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".LichThiActivity">

    <!-- Thanh tiêu đề -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#2196F3"
        android:padding="12dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LỊCH THI"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/btn_notification"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_notification"
            app:tint="#FFFFFF" />
    </RelativeLayout>

    <!-- Danh sách lịch thi -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp">

        <LinearLayout
            android:id="@+id/examListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/maMonHoc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NT118.P21 - CSDL Phân Tán"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/thoiGianThi1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày thi: 10/06/2025 - Ca 2 - P.B3.18"
                        android:drawableLeft="@drawable/ic_calendar"
                        android:drawablePadding="8dp"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/ghiChu1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ghi chú:"
                        android:textColor="#F44336"
                        android:drawableLeft="@drawable/ic_info"
                        android:drawablePadding="8dp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/maMonHoc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NT118.P21 - CSDL Phân Tán"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/thoiGianThi2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày thi: 10/06/2025 - Ca 2 - P.B3.18"
                        android:drawableLeft="@drawable/ic_calendar"
                        android:drawablePadding="8dp"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/ghiChu2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ghi chú:"
                        android:textColor="#F44336"
                        android:drawableLeft="@drawable/ic_info"
                        android:drawablePadding="8dp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/maMonHoc3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NT118.P21 - CSDL Phân Tán"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/thoiGianThi3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày thi: 10/06/2025 - Ca 2 - P.B3.18"
                        android:drawableLeft="@drawable/ic_calendar"
                        android:drawablePadding="8dp"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/ghiChu3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ghi chú:"
                        android:textColor="#F44336"
                        android:drawableLeft="@drawable/ic_info"
                        android:drawablePadding="8dp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/maMonHoc4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NT118.P21 - CSDL Phân Tán"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/thoiGianThi4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày thi: 10/06/2025 - Ca 2 - P.B3.18"
                        android:drawableLeft="@drawable/ic_calendar"
                        android:drawablePadding="8dp"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/ghiChu4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ghi chú:"
                        android:textColor="#F44336"
                        android:drawableLeft="@drawable/ic_info"
                        android:drawablePadding="8dp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/maMonHoc5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NT118.P21 - CSDL Phân Tán"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/thoiGianThi5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày thi: 10/06/2025 - Ca 2 - P.B3.18"
                        android:drawableLeft="@drawable/ic_calendar"
                        android:drawablePadding="8dp"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/ghiChu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ghi chú:"
                        android:textColor="#F44336"
                        android:drawableLeft="@drawable/ic_info"
                        android:drawablePadding="8dp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!-- Các môn thi khác sẽ được thêm bằng code hoặc copy XML tương tự -->
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation giữ nguyên như phần TKB -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="#F5F5F5"
        android:weightSum="6">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:src="@drawable/ic_tkb"
                app:tint="#757575" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TKB"
                android:textColor="#757575" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:src="@drawable/ic_lichthi"
                app:tint="#2196F3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lịch thi"
                android:textColor="#2196F3" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:src="@drawable/ic_diem"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:src="@drawable/ic_hocphi"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Học phí"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:src="@drawable/ic_deadline"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deadline"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:src="@drawable/ic_canhan"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cá nhân"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
