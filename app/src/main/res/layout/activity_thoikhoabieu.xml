<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainThoiKhoaBieu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".ScheduleActivity">

    <!-- Thanh tiêu đề -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#2196F3"
        android:elevation="8dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THỜI KHÓA BIỂU"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_centerInParent="true"/>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_notification"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:tint="#FFFFFF" />
    </RelativeLayout>

    <!-- Tháng + lịch ngang -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">
        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/txtMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tháng 5"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>
        <!-- Hàng ngày trong tuần -->
        <!-- Các ngày -->
        <LinearLayout
            android:id="@+id/dateRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
        <!-- Mỗi ngày là 1 item: TextView và Button (hoặc clickable TextView) -->
            <!-- Ví dụ với 7 ngày: CN đến Bảy -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="CN"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/sunday"
                    android:layout_marginTop="4dp"

                    android:padding="8dp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="Hai"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/monday"

                    android:background="?attr/selectableItemBackground"
                    android:layout_marginTop="4dp"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="Ba"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/tuesday"

                    android:layout_marginTop="4dp"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="Tư"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/wednesday"

                    android:layout_marginTop="4dp"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="Năm"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/thursday"

                    android:layout_marginTop="4dp"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="Sáu"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/friday"

                    android:layout_marginTop="4dp"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="Bảy"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/saturday"
                    android:layout_marginTop="4dp"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>
            <!-- Lặp tương tự cho các ngày Hai, Ba, ... -->
            <!-- ... tiếp tục từ 19 đến 24 giống trên, với id khác nhau: day19, day20,... -->
        </LinearLayout>
    </LinearLayout>
    <!-- Khu vực hiển thị thời khóa biểu -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp">
        <LinearLayout
            android:id="@+id/scheduleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"/>

    </ScrollView>
    <!-- Bottom navigation -->
    <include layout="@layout/layout_bottom_nav" />
</LinearLayout>
