<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Student Info and Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvStudentInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22520780 - Vũ Nguyễn Duy Linh"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tvSubject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lập trình Android"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/tvSemester"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HK1 2024-2025"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:background="@drawable/semester_background"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnEdit"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_edit"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Sửa điểm" />

                <ImageButton
                    android:id="@+id/btnDelete"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_delete"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Xóa điểm" />

            </LinearLayout>

        </LinearLayout>

        <!-- Grades Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Individual Grades -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!-- Process Grade -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QT"
                        android:textSize="10sp"
                        android:textColor="#999999" />

                    <TextView
                        android:id="@+id/tvProcessGrade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8.5"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                </LinearLayout>

                <!-- Practice Grade -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TH"
                        android:textSize="10sp"
                        android:textColor="#999999" />

                    <TextView
                        android:id="@+id/tvPracticeGrade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9.0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                </LinearLayout>

                <!-- Midterm Grade -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GK"
                        android:textSize="10sp"
                        android:textColor="#999999" />

                    <TextView
                        android:id="@+id/tvMidtermGrade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7.5"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                </LinearLayout>

                <!-- Final Grade -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CK"
                        android:textSize="10sp"
                        android:textColor="#999999" />

                    <TextView
                        android:id="@+id/tvFinalGrade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8.0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                </LinearLayout>

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="#E0E0E0"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp" />

            <!-- Average Grade -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:minWidth="60dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TB"
                    android:textSize="10sp"
                    android:textColor="#999999" />

                <TextView
                    android:id="@+id/tvAverageGrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8.25"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView> 