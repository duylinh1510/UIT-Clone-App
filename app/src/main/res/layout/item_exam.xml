<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvNgayThi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày thi: 01/06/2025"
            android:textSize="14sp"
            android:textColor="#333333"
            android:drawableLeft="@drawable/ic_calendar"
            android:drawablePadding="8dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvMonThi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Môn thi: Toán rời rạc"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvThoiGianBatDau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bắt đầu: 08:00"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvThoiGianKetThuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kết thúc: 10:00"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvPhongThi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phòng thi: P204"
            android:textSize="14sp"
            android:textColor="#000000" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
