<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/header_gradient">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@drawable/header_gradient"
        android:elevation="8dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="QUẢN TRỊ HỆ THỐNG"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:letterSpacing="0.05" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_admin"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:tint="#FFFFFF" />

    </RelativeLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F8F9FA"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Welcome Text -->
            <TextView
                android:id="@+id/txtWelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chào mừng Admin"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:padding="16dp"
                android:background="@drawable/bg_card_white"
                android:elevation="2dp" />

            <!-- Management Buttons Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/btnManageStudents"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:text="Quản lý\nSinh viên"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#2196F3"
                        android:drawableTop="@drawable/ic_student"
                        android:drawablePadding="8dp"
                        android:elevation="4dp" />

                    <Button
                        android:id="@+id/btnManageTeachers"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:text="Quản lý\nGiáo viên"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#4CAF50"
                        android:drawableTop="@drawable/ic_teacher"
                        android:drawablePadding="8dp"
                        android:elevation="4dp" />

                </LinearLayout>

                <!-- Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/btnManageDepartments"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:text="Quản lý\nKhoa"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#FF9800"
                        android:drawableTop="@drawable/ic_department"
                        android:drawablePadding="8dp"
                        android:elevation="4dp" />

                    <Button
                        android:id="@+id/btnManageSubjects"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:text="Quản lý\nMôn học"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#9C27B0"
                        android:drawableTop="@drawable/ic_subject"
                        android:drawablePadding="8dp"
                        android:elevation="4dp" />

                </LinearLayout>

                <!-- Row 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                    <Button
                        android:id="@+id/btnManageGrades"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:text="Quản lý\nĐiểm"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#FF5722"
                        android:drawableTop="@drawable/ic_grade"
                        android:drawablePadding="8dp"
                        android:elevation="4dp" />

                    <Button
                        android:id="@+id/btnManageSchedule"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:text="Quản lý\nThời khóa biểu"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#607D8B"
                        android:drawableTop="@drawable/ic_schedule"
                        android:drawablePadding="8dp"
                        android:elevation="4dp" />

                </LinearLayout>

                <!-- Logout Button -->
                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:backgroundTint="#F44336"
                    android:drawableLeft="@drawable/ic_logout"
                    android:drawablePadding="8dp"
                    android:elevation="4dp"
                    android:text="ĐĂNG XUẤT"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout> 