<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSubjectClassCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CS101.L01"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2c3e50" />

            <TextView
                android:id="@+id/tvSemester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Học kỳ: HK1 2024-2025"
                android:textSize="14sp"
                android:textColor="#34495e" />

            <TextView
                android:id="@+id/tvTeacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="GV: Nguyễn Văn A"
                android:textSize="14sp"
                android:textColor="#27ae60" />

            <TextView
                android:id="@+id/tvDepartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Khoa: Công nghệ thông tin"
                android:textSize="12sp"
                android:textColor="#7f8c8d" />

        </LinearLayout>

        <!-- Action buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginStart="8dp">

            <!-- Edit class button -->
            <ImageButton
                android:id="@+id/btnEditClass"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_edit"
                android:contentDescription="Chỉnh sửa lớp học"
                android:scaleType="center"
                app:tint="#3498db" />

            <!-- Delete class button -->
            <ImageButton
                android:id="@+id/btnDeleteClass"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_delete"
                android:contentDescription="Xóa lớp học"
                android:scaleType="center"
                app:tint="#e74c3c" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView> 