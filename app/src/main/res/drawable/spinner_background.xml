    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="4dp" />
            <stroke 
                android:width="1dp" 
                android:color="#E0E0E0" />
        </shape>
    </item>
    
    <!-- Dropdown Arrow -->
    <item android:gravity="end|center_vertical">
        <inset android:insetRight="12dp">
